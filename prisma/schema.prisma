generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sales {
  id        Int      @id @default(autoincrement())
  month     Int
  year      Int
  pos       Float
  checks    Float
  catering  Float
  doordash  Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([month, year])
}

model Fixed {
  id           Int      @id @default(autoincrement())
  month        Int
  year         Int
  rent         Float
  utilities    Float
  comp         Float
  insurance    Float
  supplies     Float
  waste        Float
  internet     Float
  clover       Float
  exterminator Float
  other        Float?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([month, year])
}

model Employee {
  id        Int       @id @default(autoincrement())
  name      String
  position  String
  wage      Float
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  paydates  Paydate[]
}

model Paydate {
  id         Int      @id @default(autoincrement())
  date       DateTime @default(now())
  amount     Float
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([date])
}

model Labor {
  id              Int      @id @default(autoincrement())
  month           Int
  year            Int
  owner_drawer    Float
  gusto_online    Float
  employees_total Float
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([month, year])
}

model Purchase {
  id        Int      @id @default(autoincrement())
  month     Int
  year      Int
  amount    Float
  vendor    String
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([month, year])
}

model VariableExpenses {
  id               Int      @id @default(autoincrement())
  month            Int
  year             Int
  taxes            Float
  credit_card_fees Float
  miscellanous     Float
  billboard        Float
  marketing        Float
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([month, year])
}

model Total {
  id              Int      @id @default(autoincrement())
  month           Int
  year            Int
  total_sales     Float
  total_fixed     Float
  total_variable  Float
  total_labor     Float
  total_purchases Float
  total           Float
  profit_loss     Float
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([month, year], name: "month_year")
  @@index([month, year])
}

